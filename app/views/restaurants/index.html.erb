<div class="container">
  <h1>Restaurant Listing</h1>
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li><%= link_to "#{restaurant.name} - #{restaurant.category}", restaurant %></li>
        <%= link_to "Delete",
            restaurant_path(restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      <% end %>
    </ul>
  <%= link_to "Add a new restaurant", new_restaurant_path  %>

</div>


