<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
    <%= f.submit "Add a new restaurant" link_to new_restaurant_path, class: "btn btn-primary" %>
  <% end %>
</div>
